{{#if createaccountsuccess}}
<div class="container-fluid back-green">
	<div class="row">
		<div class="col-xs-12 text-center font-medium white">
			Account Created! Welcome to The Black X... Not much to do now :(
			<br />
			Maybe edit / delete your account!
		</div>
	</div>
</div>
{{/if}}
{{#if editaccountsuccess}}
<div class="container-fluid back-green">
	<div class="row">
		<div class="col-xs-12 text-center font-medium white">
			Account Edited! :|
		</div>
	</div>
</div>
{{/if}}
{{#if changepasswordsuccess}}
<div class="container-fluid back-green">
	<div class="row">
		<div class="col-xs-12 text-center font-medium white">
			Password Updated! :|
		</div>
	</div>
</div>
{{/if}}
 {{#if deleteaccountsuccess}}
<div class="container-fluid back-green">
	<div class="row">
		<div class="col-xs-12 text-center font-medium white">
			Account Deleted :(
		</div>
	</div>
</div>
{{/if}}
<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center">
			<i class="fa fa-home superbox-icon" aria-hidden="true"></i>
			<span class="box-icon">The Black X</span>
		</div>
			{{#if firstname}}
				<div class="col-xs-4 text-center">
					<form action="editaccount" method="get">
						<button class="btn btn-primary"><span class="font-large">Edit Account</span></button>
					</form>
				</div>
				<div class="col-xs-4 text-center">
					<form action="changepassword" method="get">
						<button class="btn btn-primary"><span class="font-large">Change Password</span></button>
					</form>
				</div>
				<div class="col-xs-4 text-center">
					<form action="deleteaccount" method="get">
						<button class="btn btn-danger"><span class="font-large">Delete Account</span></button>
					</form>
				</div>
			{{else}}
				<div class="col-xs-12 text-center">
					<form action="createaccount" method="get">
						<button class="btn btn-success"><span class="font-large">Sign Up</span></button>
					</form>
				</div>
			{{/if}}
		</div>
	</div>
</div>